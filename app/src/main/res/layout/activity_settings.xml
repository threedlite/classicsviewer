<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Font Size Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Text Size"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12sp"
                android:textSize="12sp"
                android:paddingEnd="8dp" />

            <SeekBar
                android:id="@+id/fontSizeSeekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:max="36"
                android:progress="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="48sp"
                android:textSize="12sp"
                android:paddingStart="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/fontSizeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="16sp"
            android:gravity="center"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/fontSizePreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="μῆνιν ἄειδε θεὰ Πηληϊάδεω Ἀχιλῆος\nArma virumque cano, Troiae qui primus ab oris"
            android:textSize="16sp"
            android:lineSpacingMultiplier="1.3"
            android:padding="16dp"
            android:background="?android:attr/selectableItemBackground" />

        <!-- Display Settings Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Display"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="32dp"
            android:paddingBottom="8dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/invertColorsSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Invert reader colors"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Use black text on white background"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/showWordUnderlinesSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Show underlines on clickable words"
            android:textSize="16sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Makes clickable words more visible"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp" />

        <!-- Database Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Database"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="32dp"
            android:paddingBottom="16dp" />

        <TextView
            android:id="@+id/obbPathLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Asset Pack Status:"
            android:textSize="14sp"
            android:textColor="?android:attr/textColorSecondary"
            android:paddingStart="16dp"
            android:paddingEnd="16dp" />

        <TextView
            android:id="@+id/obbPathValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Not found"
            android:textSize="12sp"
            android:textColor="?android:attr/textColorSecondary"
            android:fontFamily="monospace"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="8dp" />

        <Button
            android:id="@+id/refreshDatabaseButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Refresh Database from Asset Pack"
            android:textAlignment="textStart"
            android:padding="16dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- About Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="32dp"
            android:paddingBottom="16dp" />

        <Button
            android:id="@+id/licensesButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Licenses &amp; Credits"
            android:textAlignment="textStart"
            android:padding="16dp"
            style="?android:attr/borderlessButtonStyle" />

        <!-- Build Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingTop="48dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/buildVersion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Version 1.0"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary" />

            <TextView
                android:id="@+id/buildTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Build: 2024-01-01 00:00:00"
                android:textSize="12sp"
                android:textColor="?android:attr/textColorSecondary"
                android:paddingTop="4dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>